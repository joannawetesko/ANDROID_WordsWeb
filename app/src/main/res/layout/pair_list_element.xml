<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="2"
    android:rowCount="2">

    <TableRow>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/phrase_list_element_phrase_1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textSize="20sp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:scrollHorizontally="true"
            >
        </TextView>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/phrase_list_element_phrase_2"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textSize="20sp"
            android:textColor="@color/colorDivider"
            android:layout_column="1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:scrollHorizontally="true"
            >
        </TextView>

    </TableRow>

    <TableRow
        android:id="@+id/example_row"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone"
        android:layout_marginTop="@dimen/appbar_padding_top"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/phrase_list_element_example_1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textSize="15sp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:paddingStart="@dimen/fab_margin"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingEnd="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin"
            android:layout_marginTop="@dimen/appbar_padding_top"
            android:layout_marginBottom="@dimen/appbar_padding_top"
            android:visibility="invisible"
            android:scrollHorizontally="true"
            android:textColor="@color/colorText">
        </TextView>


    <TextView
        android:id="@+id/phrase_list_element_example_2"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:textSize="15sp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:paddingStart="@dimen/fab_margin"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingEnd="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:layout_marginTop="@dimen/appbar_padding_top"
        android:layout_marginBottom="@dimen/appbar_padding_top"
        android:visibility="invisible"
        android:scrollHorizontally="true"
        android:textColor="@color/colorText">
    </TextView>
    </TableRow>

</TableLayout>