<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorMainBackground"
              android:clipChildren="false"
              android:orientation="vertical"
              tools:context="pl.com.wordsweb.ui.fragments.AddNewListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/blue_default"
        android:layout_marginTop="-230dp"
        android:background="@drawable/blue_half_background"/>

    <LinearLayout
        android:id="@+id/add_new_list_card_layout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginEnd="@dimen/big_margin"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginTop="-115dp"
        android:background="@drawable/shadow_card">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_marginBottom="@dimen/small_margin"
                        android:layout_marginEnd="@dimen/medium_margin"
                        android:layout_marginStart="@dimen/medium_margin"
                        android:layout_marginTop="@dimen/big_margin">

                        <EditText
                            android:id="@+id/add_lesson_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:hint="@string/prompt_lesson_name"
                            android:inputType="text"
                            android:textSize="24sp"/>

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="@dimen/super_large_margin">

                        <Spinner
                            android:id="@+id/add_lesson_first_language_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/big_margin"
                            android:layout_marginStart="@dimen/big_margin"
                            android:layout_weight="1"
                            android:spinnerMode="dialog" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="-15dp">

                        <Spinner
                            android:id="@+id/add_lesson_second_language_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/big_margin"
                            android:layout_marginStart="@dimen/big_margin"
                            android:layout_weight="1"
                            android:spinnerMode="dialog" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>

</LinearLayout>